{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@assets/*": ["./assets/*"],
      "@shared/*": ["./src/shared/*"],
      "@theme/*": ["./src/theme/*"],
      "@images/*": ["./assets/images/*"],
      "@screens/*": ["./screens/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.svg"
  ]
}
